<odoo>
    <data>
        <record id="oa_overtime_application_tree_view" model="ir.ui.view">
            <field name="name">加班申请</field>
            <field name="model">oa.overtime.application</field>
            <field name="arch" type="xml">
                <tree default_order="id desc" decoration-info="oa_state in ('01', '02')" decoration-warning="oa_result == 'redirect'" decoration-success="oa_result == 'agree'" decoration-danger="oa_result == 'refuse'">
                    <field name="process_code"/>
                    <field name="originator_user_id"/>
                    <field name="emp_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="company_id"/>
                    <field name="oa_state"/>
                    <field name="oa_message"/>
                    <field name="oa_result"/>
                </tree>
            </field>
        </record>

        <record id="oa_overtime_application_form_view" model="ir.ui.view">
            <field name="name">加班申请</field>
            <field name="model">oa.overtime.application</field>
            <field name="arch" type="xml">
                <form string="加班申请">
                    <header>
                        <button name="summit_approval" type="object" string="提交审批" class="oe_highlight"
                                attrs="{'invisible': [('oa_state', '!=', '00')]}"
                                confirm="确认提交审批吗？系统将会提交至钉钉系统进行审批流程！"/>
                        <field name="oa_state" widget="statusbar" modifiers="{'readonly': true}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button"
                                       options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                            </button>
                        </div>
                        <div class="oe_title" name="title">
                            <label for="process_code" class="oe_edit_only"/>
                            <h1>
                                <field name="process_code" placeholder="单据编号，保存后自动生成" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="originator_user_id" attrs="{'readonly': [('oa_state', '!=', '00')]}"
                                       options="{'horizontal': true, 'no_create_edit': True}" placeholder="请选择发起人"/>
                                <field name="emp_id" attrs="{'readonly': [('oa_state', '!=', '00')]}"
                                       options="{'horizontal': true, 'no_create_edit': True}"/>
                            </group>
                            <group>
                                <field name="start_date" attrs="{'readonly': [('oa_state', '!=', '00')]}"/>
                                <field name="end_date" attrs="{'readonly': [('oa_state', '!=', '00')]}"/>
                                <field name="duration" attrs="{'readonly': [('oa_state', '!=', '00')]}"/>
                            </group>
                        </group>
                        <group>
                            <field name="reason_leave" attrs="{'readonly': [('oa_state', '!=', '00')]}"
                                   placeholder="请描述加班原因..."/>
                        </group>
                        <group>
                            <group>
                                <field name="create_uid" string="创建人"/>
                            </group>
                            <group>
                                <field name="create_date" string="创建时间"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="oa_overtime_application_action">
            <field name="name">加班申请</field>
            <field name="res_model">oa.overtime.application</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="加班申请" id="oa_overtime_application_menu" parent="oa_leave_application_main_menu"
                  sequence="3" action="oa_overtime_application_action"/>

    </data>
</odoo>
