<odoo>
    <data>
        <record id="oa_transfer_application_tree_view" model="ir.ui.view">
            <field name="name">转正申请</field>
            <field name="model">oa.transfer.application</field>
            <field name="arch" type="xml">
                <tree default_order="id desc" decoration-success="oa_state in ('01', '02')" decoration-muted="oa_result == 'agree'" decoration-warning="oa_result in ('refuse', 'redirect')" >
                    <field name="process_code"/>
                    <field name="originator_user_id"/>
                    <field name="emp_id"/>
                    <field name="entry_date"/>
                    <field name="transfer_date"/>
                    <field name="job_id"/>
                    <field name="job_num"/>
                    <field name="company_id"/>
                    <field name="oa_state"/>
                    <field name="oa_message"/>
                    <field name="oa_result"/>
                </tree>
            </field>
        </record>

        <record id="oa_transfer_application_form_view" model="ir.ui.view">
            <field name="name">转正申请</field>
            <field name="model">oa.transfer.application</field>
            <field name="arch" type="xml">
                <form string="转正申请">
                    <header>
                        <button name="summit_approval" type="object" string="提交审批" class="oe_highlight"
                                attrs="{'invisible': [('oa_state', '!=', '00')]}"
                                confirm="确认提交审批吗？系统将会提交至钉钉系统进行审批流程！"/>
                        <field name="oa_state" widget="statusbar" modifiers="{'readonly': true}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                            </button>
                        </div>
                        <div class="oe_title" name="title">
                            <label for="process_code" class="oe_edit_only"/>
                            <h1>
                                <field name="process_code" placeholder="单据编号，保存后自动生成" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="originator_user_id" attrs="{'readonly': [('oa_state', '!=', '00')]}"
                                       options="{'horizontal': true, 'no_create_edit': True}" placeholder="请选择发起人"/>
                                <field name="emp_id" attrs="{'readonly': [('oa_state', '!=', '00')]}"
                                       options="{'horizontal': true, 'no_create_edit': True}"/>
                                <field name="entry_date" attrs="{'readonly': [('oa_state', '!=', '00')]}"
                                       options="{'horizontal': true, 'no_create_edit': True}"/>
                            </group>
                            <group>
                                <field name="transfer_date" attrs="{'readonly': [('oa_state', '!=', '00')]}"/>
                                <field name="job_id" attrs="{'readonly': [('oa_state', '!=', '00')]}"/>
                                <field name="job_num" attrs="{'readonly': [('oa_state', '!=', '00')]}"/>
                            </group>
                        </group>
                        <group>
                            <field name="post_understanding" attrs="{'readonly': [('oa_state', '!=', '00')]}"
                                   placeholder="对本岗位的理解"/>
                            <field name="sum_up" attrs="{'readonly': [('oa_state', '!=', '00')]}"
                                   placeholder="试用期对工作的总结"/>
                            <field name="opinion_text" attrs="{'readonly': [('oa_state', '!=', '00')]}"
                                   placeholder="对公司的意见和建议"/>
                        </group>
                        <group>
                            <group>
                                <field name="create_uid" string="创建人"/>
                            </group>
                            <group>
                                <field name="create_date" string="创建时间"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="oa_transfer_application_action">
            <field name="name">转正申请</field>
            <field name="res_model">oa.transfer.application</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="行政人事" id="oa_administrative_personnel_main_menu" parent="oa_base.menu_oa_root" sequence="3" groups="oa_personnel_admin.personnel"/>

        <menuitem name="转正申请" id="oa_transfer_application_menu" parent="oa_administrative_personnel_main_menu" sequence="1"
                  action="oa_transfer_application_action"/>

    </data>
</odoo>
